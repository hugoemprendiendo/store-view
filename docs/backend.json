{
  "entities": {
    "Branch": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Branch",
      "type": "object",
      "description": "Represents a branch in the store chain.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the branch."
        },
        "region": {
          "type": "string",
          "description": "Region the branch is located in."
        },
        "brand": {
          "type": "string",
          "description": "Brand the branch belongs to."
        },
        "address": {
          "type": "string",
          "description": "Address of the branch."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of the image representing the branch.",
          "format": "uri"
        },
        "imageHint": {
          "type": "string",
          "description": "Hint for AI image generation."
        }
      },
      "required": [
        "name",
        "region",
        "brand",
        "address",
        "imageUrl",
        "imageHint"
      ]
    },
    "Incident": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Incident",
      "type": "object",
      "description": "Represents an incident reported at a branch.",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the incident."
        },
        "branchId": {
          "type": "string",
          "description": "Reference to the Branch where the incident occurred."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the incident."
        },
        "photoUrl": {
          "type": "string",
          "description": "URL of the photo associated with the incident.",
          "format": "uri"
        },
        "photoHint": {
          "type": "string",
          "description": "Hint for AI image generation."
        },
        "audioTranscription": {
          "type": "string",
          "description": "Text transcription of the audio recording associated with the incident."
        },
        "category": {
          "type": "string",
          "description": "The category of the incident."
        },
        "priority": {
          "type": "string",
          "enum": [
            "Low",
            "Medium",
            "High"
          ]
        },
        "status": {
          "type": "string",
          "enum": [
            "Abierto",
            "En Progreso",
            "Resuelto"
          ]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "title",
        "branchId",
        "category",
        "priority",
        "status",
        "createdAt"
      ]
    },
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "description": "The user's role.",
          "enum": ["user", "superadmin"]
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "assignedBranches": {
            "type": "array",
            "description": "A list of branch IDs assigned to the user.",
            "items": {
                "type": "string"
            }
        }
      },
      "required": ["name", "email", "createdAt", "role"]
    }
  },
  "auth": {
    "providers": [
      "anonymous",
      "emailpassword"
    ],
    "customClaims": {
        "role": {
            "type": "string",
            "enum": ["user", "superadmin"]
        }
    }
  },
  "firestore": {
    "/branches/{branchId}": {
      "schema": {
        "$ref": "#/entities/Branch"
      },
      "description": "Stores all branch locations."
    },
    "/incidents/{incidentId}": {
      "schema": {
        "$ref": "#/entities/Incident"
      },
      "description": "Stores all incidents across all branches."
    },
    "/users/{userId}": {
        "schema": {
            "$ref": "#/entities/UserProfile"
        },
        "description": "Stores user profile information."
    }
  }
}
