rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    // /branches/{branchId}
    match /branches/{branchId} {
      allow read, write: if isSignedIn();
    }

    // /incidents/{incidentId}
    match /incidents/{incidentId} {
      allow read, write: if isSignedIn();
    }
  }
}
