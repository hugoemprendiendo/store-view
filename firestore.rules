
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userDocExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function isSuperAdmin() {
      return isSignedIn() && userDocExists() && getUserDoc().data.role == 'superadmin';
    }
    
    function isAssignedToBranch(branchId) {
      if (isSuperAdmin()) {
        return true;
      }
      if (!isSignedIn() || !userDocExists()) {
        return false;
      }
      let userDoc = getUserDoc();
      // Ensure assignedBranches is a map before accessing it
      return 'assignedBranches' in userDoc.data 
        && userDoc.data.assignedBranches is map
        && userDoc.data.assignedBranches[branchId] == true;
    }
    
    match /users/{userId} {
      allow get: if isOwner(userId) || isSuperAdmin();
      allow create: if isOwner(userId) || isSuperAdmin();
      // A user can update their own profile, or a superadmin can update any profile.
      allow update: if isOwner(userId) || isSuperAdmin();
      allow list: if isSuperAdmin();
      allow delete: if false; 
    }

    match /branches/{branchId} {
      // A user assigned to a branch can get it. Superadmins can list all.
      allow get: if isAssignedToBranch(branchId);
      allow list: if isSuperAdmin();
      allow create, update, delete: if isSuperAdmin();
    }

    match /incidents/{incidentId} {
      // Allow 'get' if the user is assigned to the incident's branch.
      // Firestore uses this to check each document returned by a 'list' query.
      allow get: if isAssignedToBranch(resource.data.branchId);
      
      // Allow 'list' (queries) to proceed if the user is signed in.
      // The `get` rule above will then secure each individual document returned by the query.
      // This is the standard pattern for enabling secure 'in'/'array-contains-any' queries.
      allow list: if isSignedIn();
      
      // Allow write operations (create, update, delete) if assigned to the branch.
      allow create: if isAssignedToBranch(request.resource.data.branchId);
      allow update, delete: if isAssignedToBranch(resource.data.branchId);
    }
    
    match /incident_categories/{categoryId} {
        allow read: if isSignedIn();
        allow write: if isSuperAdmin();
    }

    match /incident_priorities/{priorityId} {
        allow read: if isSignedIn();
        allow write: if isSuperAdmin();
    }

    match /incident_statuses/{statusId} {
        allow read: if isSignedIn();
        allow write: if isSuperAdmin();
    }

    match /test_docs/{docId} {
        allow read, write: if true;
    }
  }
}
