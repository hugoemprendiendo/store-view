rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
        return request.auth.uid == userId;
    }
    
    function isAssignedToBranch(branchId) {
        let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
        // Check if the user is a superadmin OR if the branchId is in their assignedBranches map.
        return userDoc.data.role == 'superadmin' || (
            'assignedBranches' in userDoc.data &&
            branchId in userDoc.data.assignedBranches
        );
    }
    
    match /users/{userId} {
      allow create: if isOwner(userId);
      allow get: if isOwner(userId) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
      allow list, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
      allow delete: if false; // Nobody can delete user profiles
    }

    match /branches/{branchId} {
      allow get: if isAssignedToBranch(branchId);
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }

    match /incidents/{incidentId} {
      function getIncidentBranchId() {
        return request.method == 'create' ? request.resource.data.branchId : resource.data.branchId;
      }
      
      allow get, write: if isAssignedToBranch(getIncidentBranchId());
      
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin' || (
        isSignedIn() &&
        'branchId' in request.query.where &&
        isAssignedToBranch(request.query.where.branchId)
      );
    }
    
    match /app_settings/{settingId} {
        allow get: if isSignedIn();
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Rule for the test collection
    match /test_docs/{docId} {
        allow read, write: if true;
    }
  }
}
