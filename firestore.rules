rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isCreatingOwnProfile(userId) {
      // A user can only access a document where the ID matches their own user ID.
      return request.auth.uid == userId;
    }
    
    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isSuperAdmin() {
      return isSignedIn() && getRole() == 'superadmin';
    }

    match /users/{userId} {
      // Anyone can create their own profile. The signup logic handles assigning roles.
      allow create: if isCreatingOwnProfile(userId);
      
      // Superadmins can read all user profiles.
      // Users can only read or update their own profile.
      allow read, update: if isSuperAdmin() || isCreatingOwnProfile(userId);
    }

    match /branches/{branchId} {
      // Any signed-in user can read and write branch data.
      allow read, write: if isSignedIn();
    }

    match /incidents/{incidentId} {
      // Any signed-in user can read and write incident data.
      allow read, write: if isSignedIn();
    }
  }
}
