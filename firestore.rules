rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isCreatingOwnProfile(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function getRole() {
      return getUserData(request.auth.uid).role;
    }

    function isSuperAdmin() {
      return isSignedIn() && getRole() == 'superadmin';
    }

    function isAssignedToBranch(branchId) {
      return isSignedIn() && branchId in getUserData(request.auth.uid).assignedBranches;
    }

    match /users/{userId} {
      allow create: if isCreatingOwnProfile(userId);
      allow read, update: if isSuperAdmin() || isCreatingOwnProfile(userId);
    }

    match /branches/{branchId} {
      allow read: if isSuperAdmin() || isAssignedToBranch(branchId);
      allow write: if isSuperAdmin(); // Only superadmins can create/edit branches
    }

    match /incidents/{incidentId} {
      // To read or write an incident, you must have access to the branch it belongs to.
      // The incident data is in `request.resource.data` for write, and `resource.data` for read.
      function getBranchIdForIncident() {
        return request.method == 'create' ? request.resource.data.branchId : resource.data.branchId;
      }
      
      allow read, write: if isSuperAdmin() || isAssignedToBranch(getBranchIdForIncident());
    }
  }
}
