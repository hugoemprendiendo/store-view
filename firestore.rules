
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isSuperAdmin() {
      // This relies on the user having read access to their own document.
      // The exists() check makes this function safe.
      if (!isSignedIn() || !exists(/databases/$(database)/documents/users/$(request.auth.uid))) {
          return false;
      }
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc.data.role == 'superadmin';
    }
    
    function isAssignedToBranch(branchId) {
        // A superadmin is implicitly assigned to all branches.
        if (isSuperAdmin()) {
            return true;
        }
        // A regular user must exist and have the branchId in their assignedBranches map.
        // This is now safe: it checks for the existence of the document and the key before trying to access it.
        if (!isSignedIn() || !exists(/databases/$(database)/documents/users/$(request.auth.uid))) {
            return false;
        }
        let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
        // Check that assignedBranches is a map and the specific branchId key is set to true.
        return 'assignedBranches' in userDoc.data 
          && userDoc.data.assignedBranches[branchId] == true;
    }
    
    match /users/{userId} {
      // A user must be able to read their own document for isSuperAdmin() and isAssignedToBranch() to work.
      // A superadmin can get any user's profile.
      allow get: if isOwner(userId) || isSuperAdmin();
      // Allow a user to create their own profile. A superadmin can create/update any profile.
      allow create, update: if isOwner(userId) || isSuperAdmin();
      // Listing is restricted to superadmins.
      allow list: if isSuperAdmin();
      allow delete: if false; // Nobody can delete user profiles
    }

    match /branches/{branchId} {
      allow get: if isAssignedToBranch(branchId);
      // Superadmin can list all branches. Regular users must query their specific branches one by one.
      allow list: if isSuperAdmin();
      allow create, update, delete: if isSuperAdmin();
    }

    match /incidents/{incidentId} {
      // This single read rule covers both get (single doc) and list (queries).
      // For queries, Firestore applies this rule to EACH document the query tries to return.
      // If the user isn't assigned to a document's branchId, it's filtered out.
      allow read: if isSignedIn() && isAssignedToBranch(resource.data.branchId);

      // Create: check branchId from the incoming data.
      allow create: if isSignedIn() && isAssignedToBranch(request.resource.data.branchId);
      // Update/Delete: check branchId from the data already on the server.
      allow update, delete: if isSignedIn() && isAssignedToBranch(resource.data.branchId);
    }
    
    match /app_settings/{settingId} {
        allow get: if isSignedIn();
        allow write: if isSuperAdmin();
    }

    // Rule for the test collection
    match /test_docs/{docId} {
        allow read, write: if true;
    }
  }
}
