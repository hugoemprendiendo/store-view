rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isCreatingOwnProfile(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isSuperAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
          && getUserData(request.auth.uid).role == 'superadmin';
    }

    function isAssignedToBranch(branchId) {
      // Return true if the user is a superadmin.
      if (isSuperAdmin()) {
        return true;
      }
      
      // For regular users, check if the branchId key exists in their assignedBranches map.
      let userDocData = getUserData(request.auth.uid);
      return isSignedIn() && 
             'assignedBranches' in userDocData && 
             branchId in userDocData.assignedBranches;
    }

    match /users/{userId} {
      allow create: if isCreatingOwnProfile(userId);
      allow read, update, list: if isSuperAdmin() || isCreatingOwnProfile(userId);
    }

    match /branches/{branchId} {
      allow list: if isSuperAdmin();
      allow get: if isAssignedToBranch(branchId);
      allow write: if isSuperAdmin();
    }

    match /incidents/{incidentId} {
      function getBranchIdForIncident() {
        return request.method == 'create' ? request.resource.data.branchId : resource.data.branchId;
      }

      allow get, write: if isAssignedToBranch(getBranchIdForIncident());

      allow list: if isSuperAdmin() || (
        isSignedIn() &&
        'branchId' in request.query.where &&
        isAssignedToBranch(request.query.where.branchId)
      );
    }
  }
}
