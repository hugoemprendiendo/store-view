rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Check if the user trying to write is the first user in the database.
    function isFirstUser() {
      // `exists` checks current state. We check that no other user docs exist before this write.
      // We look for documents inside the 'users' collection.
      return !exists(/databases/$(database)/documents/users);
    }
    
    function isCreatingOwnProfile(userId) {
      return request.auth.uid == userId;
    }
    
    function isSuperAdmin() {
      // This refers to the role in the data being written.
      return request.resource.data.role == 'superadmin';
    }
    
    function isUser() {
      // This refers to the role in the data being written.
      return request.resource.data.role == 'user';
    }

    // /users/{userId}
    match /users/{userId} {
      // Allow user creation under specific conditions.
      // A user can create their own profile.
      // If it's the first user ever, they must be a superadmin.
      // If it's not the first user, they must be a regular user.
      allow create: if isCreatingOwnProfile(userId) &&
                       ((isFirstUser() && isSuperAdmin()) || (!isFirstUser() && isUser()));
      
      // Only the user themselves can read or update their own profile.
      allow read, update: if isCreatingOwnProfile(userId);
    }

    // /branches/{branchId}
    match /branches/{branchId} {
      // Any signed-in user can read and write branch data.
      allow read, write: if isSignedIn();
    }

    // /incidents/{incidentId}
    match /incidents/{incidentId} {
      // Any signed-in user can read and write incident data.
      allow read, write: if isSignedIn();
    }
  }
}
