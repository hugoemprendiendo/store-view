rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isCreatingOwnProfile(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function getRole() {
      return getUserData(request.auth.uid).role;
    }

    function isSuperAdmin() {
      return isSignedIn() && getRole() == 'superadmin';
    }

    function isAssignedToBranch(branchId) {
      // Ensure user data exists and has assignedBranches before checking.
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             'assignedBranches' in getUserData(request.auth.uid) &&
             getUserData(request.auth.uid).assignedBranches.hasAny([branchId]);
    }

    match /users/{userId} {
      allow create: if isCreatingOwnProfile(userId);
      allow read, update: if isSuperAdmin() || isCreatingOwnProfile(userId);
      allow list: if isSuperAdmin();
    }

    match /branches/{branchId} {
      allow list: if isSuperAdmin();
      allow get: if isSuperAdmin() || isAssignedToBranch(branchId);
      allow write: if isSuperAdmin();
    }

    match /incidents/{incidentId} {
      function getBranchIdForIncident() {
        return request.method == 'create' ? request.resource.data.branchId : resource.data.branchId;
      }
      
      allow get, write: if isSuperAdmin() || isAssignedToBranch(getBranchIdForIncident());

      // Allow a user to list incidents if they are assigned to the branch specified in the query
      allow list: if isSuperAdmin() || (isSignedIn() && isAssignedToBranch(request.query.where.branchId.to_list()[0]));
    }
  }
}
