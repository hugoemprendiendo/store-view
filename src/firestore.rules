
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
        return request.auth.uid == userId;
    }
    
    function isSuperAdmin() {
      // This relies on the user having read access to their own document.
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
          && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    function isAssignedToBranch(branchId) {
        // A superadmin is implicitly assigned to all branches.
        if (isSuperAdmin()) {
            return true;
        }
        // A regular user must exist and have the branchId in their assignedBranches map.
        // This is now safe: it checks for the existence of the key before trying to access it.
        let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
        return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
            && 'assignedBranches' in userDoc.data && branchId in userDoc.data.assignedBranches;
    }
    
    match /users/{userId} {
      // A user must be able to read their own document for isSuperAdmin() and isAssignedToBranch() to work.
      // A superadmin can get any user's profile.
      allow get: if isOwner(userId) || isSuperAdmin();
      // Allow a user to create their own profile. A superadmin can create/update any profile.
      allow write: if isOwner(userId) || isSuperAdmin();
      // Listing is restricted to superadmins.
      allow list: if isSuperAdmin();
      allow delete: if false; // Nobody can delete user profiles
    }

    match /branches/{branchId} {
      allow get: if isAssignedToBranch(branchId);
      // Superadmin can list all branches. Regular users get their branches from their profile.
      allow list: if isSuperAdmin();
      allow create, update, delete: if isSuperAdmin();
    }

    match /incidents/{incidentId} {
      function getIncidentBranchId() {
        // For a create operation, the branchId is in the incoming request data.
        // For all other operations, it's in the existing document on the server.
        return request.method == 'create' ? request.resource.data.branchId : resource.data.branchId;
      }
      
      // Allow read/write to an incident if the user is assigned to the incident's branch.
      // The 'get' rule will be applied to every document returned by a 'list' (query) operation.
      allow get, write: if isAssignedToBranch(getIncidentBranchId());
      
      // We only allow a superadmin to list all incidents.
      // For regular users, queries must be filtered by branchId. The security for this
      // is enforced by the `get` rule above on each individual document returned by the query.
      allow list: if isSuperAdmin();
    }
    
    match /app_settings/{settingId} {
        allow get: if isSignedIn();
        allow write: if isSuperAdmin();
    }

    // Rule for the test collection
    match /test_docs/{docId} {
        allow read, write: if true;
    }
  }
}
