rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isCreatingOwnProfile(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function getRole() {
      return getUserData(request.auth.uid).role;
    }

    function isSuperAdmin() {
      // Check if user is signed in before trying to get their role.
      return isSignedIn() && getRole() == 'superadmin';
    }

    function isAssignedToBranch(branchId) {
      // Superadmins can access everything, no need to check assignedBranches.
      if (isSuperAdmin()) {
        return true;
      }
      // For regular users, check if the user document exists and if the branchId is in their assigned list.
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             'assignedBranches' in getUserData(request.auth.uid) &&
             branchId in getUserData(request.auth.uid).assignedBranches;
    }

    match /users/{userId} {
      allow create: if isCreatingOwnProfile(userId);
      allow read, update: if isSuperAdmin() || isCreatingOwnProfile(userId);
      allow list: if isSuperAdmin();
    }

    match /branches/{branchId} {
      allow list: if isSuperAdmin();
      // A user can get a specific branch document if they are assigned to it.
      allow get: if isAssignedToBranch(branchId);
      allow write: if isSuperAdmin();
    }

    match /incidents/{incidentId} {
      function getBranchIdForIncident() {
        return request.method == 'create' ? request.resource.data.branchId : resource.data.branchId;
      }
      
      // A user can get or write a specific incident if they are assigned to the corresponding branch.
      allow get, write: if isAssignedToBranch(getBranchIdForIncident());

      // A user can list incidents if the query is scoped to a branch they are assigned to.
      allow list: if isSignedIn() && isAssignedToBranch(request.query.where.branchId.to_list()[0]);
    }
  }
}
