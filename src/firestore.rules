rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData(userId) {
      // This is now safe because /users/{userId} has `allow get: if isOwner(userId)`.
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isSuperAdmin() {
      // This function relies on the user having read access to their own document.
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
          && getUserData(request.auth.uid).role == 'superadmin';
    }
    
    function isOwner(userId) {
        return request.auth.uid == userId;
    }

    // A user is assigned to a branch if they are a superadmin or if the branchId
    // is in their assignedBranches map.
    function isAssignedToBranch(branchId) {
      if (isSuperAdmin()) {
        return true;
      }
      
      let userDocData = getUserData(request.auth.uid);
      // Ensure the user document has been loaded and the necessary fields exist
      return isSignedIn() && 
             'assignedBranches' in userDocData && 
             branchId in userDocData.assignedBranches;
    }

    match /users/{userId} {
      // A user can create their own profile. For now, this also allows signup.
      allow create: if isOwner(userId);
      // A user MUST be able to read their own document for isSuperAdmin() to work.
      allow get: if isOwner(userId);
      // Listing and updating is restricted to superadmins.
      allow list, update: if isSuperAdmin();
    }

    match /branches/{branchId} {
      // Superadmins can list all branches.
      allow list: if isSuperAdmin();
      // Users can only get branches they are assigned to.
      allow get: if isAssignedToBranch(branchId);
      // Only superadmins can create, update, or delete branches.
      allow write: if isSuperAdmin();
    }

    match /incidents/{incidentId} {
      // Helper function to get the branchId from the resource (for existing docs)
      // or from the request (for new docs).
      function getBranchIdForIncident() {
        return request.method == 'create' ? request.resource.data.branchId : resource.data.branchId;
      }

      // Users can get or write to an incident if they are assigned to that incident's branch.
      allow get, write: if isAssignedToBranch(getBranchIdForIncident());

      // Superadmins can list all incidents.
      // Regular users can only list incidents if they filter by a specific branchId,
      // and they must be assigned to that branch.
      allow list: if isSuperAdmin() || (
        isSignedIn() &&
        'branchId' in request.query.where &&
        isAssignedToBranch(request.query.where.branchId)
      );
    }

     match /app_settings/{settingId} {
        // Any signed-in user can read the settings (needed for forms), 
        // but only superadmins can write them.
        allow get, list: if isSignedIn();
        allow write: if isSuperAdmin();
     }
  }
}
