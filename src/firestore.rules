rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isCreatingOwnProfile(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function getRole() {
      return getUserData(request.auth.uid).role;
    }

    function isSuperAdmin() {
      // A user is a superadmin if they are signed in, their user document exists,
      // and their role is 'superadmin'.
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && getRole() == 'superadmin';
    }

    function isAssignedToBranch(branchId) {
      // A regular user is assigned to a branch if their user document exists,
      // they have an 'assignedBranches' list, and the branchId is in that list.
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             'assignedBranches' in getUserData(request.auth.uid) &&
             branchId in getUserData(request.auth.uid).assignedBranches;
    }

    match /users/{userId} {
      // A user can create their own profile.
      allow create: if isCreatingOwnProfile(userId);
      // A user can read/update their own profile. A superadmin can read/update any profile.
      allow read, update: if isSuperAdmin() || isCreatingOwnProfile(userId);
      // Only superadmins can list all users.
      allow list: if isSuperAdmin();
    }

    match /branches/{branchId} {
      // Superadmins can list all branches.
      allow list: if isSuperAdmin();
      // Superadmins or users assigned to a branch can get that specific branch document.
      allow get: if isSuperAdmin() || isAssignedToBranch(branchId);
      // Only superadmins can create, update, or delete branches.
      allow write: if isSuperAdmin();
    }

    match /incidents/{incidentId} {
      // Helper function to get the branchId from the incident being read or written.
      function getBranchIdForIncident() {
        return request.method == 'create' ? request.resource.data.branchId : resource.data.branchId;
      }
      
      // Superadmins or users assigned to the incident's branch can get or write that incident.
      allow get, write: if isSuperAdmin() || isAssignedToBranch(getBranchIdForIncident());

      // Superadmins can list all incidents.
      // Users can list incidents if the query is filtered by a branchId they are assigned to.
      allow list: if isSuperAdmin() || (
        isSignedIn() &&
        request.query.keys().hasAny(['where']) &&
        request.query.where.branchId.to_list().size() > 0 &&
        isAssignedToBranch(request.query.where.branchId.to_list()[0])
      );
    }
  }
}
